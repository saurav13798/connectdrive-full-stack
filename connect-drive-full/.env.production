# ConnectDrive Production Environment Configuration

# Node Environment
NODE_ENV=production

# Database Configuration
DB_USER=connectdrive_prod
DB_PASSWORD=change_this_strong_password_in_production
DB_NAME=connectdrive_prod
DATABASE_HOST=postgres
DATABASE_PORT=5432

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_at_least_32_chars
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# MinIO Configuration
MINIO_USER=connectdrive_user
MINIO_PASSWORD=change_this_strong_minio_password_in_production
MINIO_BUCKET=connectdrive
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_USE_SSL=false

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Storage Configuration
STORAGE_QUOTA=5368709120
RECYCLE_RETENTION_DAYS=30

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
