# Application
NODE_ENV=development
APP_PORT=3001

# Database (PostgreSQL)
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=connect
DATABASE_PASSWORD=connectpass
DATABASE_NAME=connectdrive

# JWT
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_change_in_production
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# MinIO S3-compatible Storage
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET=connectdrive

# Redis (for BullMQ job queue)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Storage Limits
DEFAULT_STORAGE_QUOTA=5368709120
STORAGE_QUOTA_UNIT=bytes

# File Upload
MAX_FILE_SIZE=1073741824
PRESIGNED_URL_EXPIRY=3600
